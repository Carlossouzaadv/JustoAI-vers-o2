{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build && npx tsx scripts/run-migrations.ts",
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps --prefer-offline --no-audit",

  "build": {
    "env": {
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },

  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/judit/**/*.ts": {
      "maxDuration": 60,
      "memory": 2048
    },
    "src/app/api/bull-board/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },

  "regions": ["iad1"],

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/api-docs",
      "destination": "/api/docs"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ],

  "redirects": [
    {
      "source": "/docs",
      "destination": "/api-docs",
      "permanent": false
    }
  ],

  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
